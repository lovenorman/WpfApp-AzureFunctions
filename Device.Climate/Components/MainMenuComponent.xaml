<UserControl x:Class="Device.Climate.Components.MainMenuComponent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Device.Climate.Components"
             mc:Ignorable="d" 
             d:DesignHeight="80" d:DesignWidth="720">
    
    <Border Style="{StaticResource menuBar}">
        <StackPanel Orientation="Horizontal">
            <RadioButton Style="{StaticResource menuButton}" IsChecked="True" />
            <RadioButton Style="{StaticResource menuButton}" />
            <RadioButton Style="{StaticResource menuButton}"/>
        </StackPanel>
    </Border>
</UserControl>
