<Window x:Class="ConnectingDevice.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ConnectingDevice"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Connecting Device" Height="150" Width="250">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock x:Name="tbStateMessage" FontSize="12" HorizontalAlignment="Center" />
            <Button x:Name="btnOnOff" Click="btnOnOff_Click" Content="Turn On" Padding="10 5" Margin="0 20 0 0" HorizontalAlignment="Center" />
        </StackPanel>
    </Grid>
</Window>
